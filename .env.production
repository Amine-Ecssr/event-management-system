# Production Environment Configuration
# Store the real secrets in .env.production.local (ignored) and keep this file committed as a template.

# Database Configuration
POSTGRES_DB=ecssr_events
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@db:5432/ecssr_events
DB_RESET_SCHEMAS=public,keycloak

# Session Configuration
SESSION_SECRET=change-this-to-a-random-secret-in-production

# Keycloak Configuration
KEYCLOAK_REALM=ecssr-events
KEYCLOAK_CLIENT_ID=ecssr-events-app
KEYCLOAK_CLIENT_SECRET=replace-with-prod-secret
KEYCLOAK_REDIRECT_URI=https://api.eventcal.app/api/auth/callback
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=replace-with-strong-password

# Superadmin bootstrap (disable or rotate after first deploy)
SUPERADMIN_USERNAME=admin
SUPERADMIN_PASSWORD=replace-with-strong-password

# Email Configuration (Resend or SMTP)
RESEND_API_KEY=
FROM_EMAIL=noreply@example.com
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# WhatsApp Service
WHATSAPP_ENABLED=false
WHATSAPP_SERVICE_URL=http://whatsapp-service:3001
WHATSAPP_AUTH_PHRASE=change-this-secure-phrase
WHATSAPP_DEFAULT_GROUP=ECSSR Events

# Scraper Service
SCRAPER_SERVICE_URL=http://scraper-service:3002
SCRAPER_SERVICE_TOKEN=change-this-scraper-token
SCRAPER_SERVICE_SECRET=change-this-scraper-secret

# Scraper Flags
ABU_DHABI_SCRAPER_ENABLED=false

# Frontend build-time config
VITE_API_BASE_URL=https://api.eventcal.app
DOMAIN=eventcal.app
WWW_DOMAIN=www.eventcal.app
API_DOMAIN=api.eventcal.app
AUTH_DOMAIN=auth.eventcal.app

# ACME email for Let's Encrypt notifications
LETSENCRYPT_EMAIL=admin@eventcal.app

# Server Keycloak URLs for production
KEYCLOAK_URL=https://auth.eventcal.app

# Application
PORT=5000
NODE_ENV=production
