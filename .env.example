# Database Configuration
POSTGRES_DB=ecssr_events
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@db:5432/ecssr_events

# Session Configuration
SESSION_SECRET=change-this-to-a-random-secret-in-production

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8080
KEYCLOAK_REALM=ecssr-events
KEYCLOAK_CLIENT_ID=ecssr-events-app
KEYCLOAK_CLIENT_SECRET=your-client-secret-here
KEYCLOAK_REDIRECT_URI=http://localhost:5000/api/auth/callback
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Keycloak Department Sync Configuration (optional)
KEYCLOAK_SYNC_ENABLED=true          # Enable/disable automatic group sync (default: true)
KEYCLOAK_SYNC_INTERVAL=3600000      # Sync interval in milliseconds (default: 1 hour = 3600000)

# Superadmin Account (for backward compatibility/bootstrap)
SUPERADMIN_USERNAME=admin
SUPERADMIN_PASSWORD=admin123

# Email Configuration - Option 1: Resend (recommended)
RESEND_API_KEY=your_resend_api_key_here
FROM_EMAIL=noreply@yourdomain.com

# Email Configuration - Option 2: SMTP (alternative)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=your-email@gmail.com

# WhatsApp Configuration (optional)
WHATSAPP_ENABLED=false

# MinIO Configuration (for file storage)
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=ecssr-archive
MINIO_EVENTS_BUCKET=ecssr-events
MINIO_USE_SSL=false

# Elasticsearch Configuration
# Required for advanced search and analytics features
# Choose ONE of the following configurations:

## Option 1: Elasticsearch Serverless (Recommended for Production on Elastic Cloud)
## Create a project at https://cloud.elastic.co/ and get your Cloud ID and API key.
## IMPORTANT: Treat the API key as a secret. Set real values only in environment-specific
## *.local files (e.g., .env.production.local) and NEVER commit real API keys to git.
# ELASTICSEARCH_CLOUD_ID=your-deployment-name:base64-encoded-cloud-id
# ELASTICSEARCH_API_KEY=your-elastic-cloud-api-key-here

## Option 2: Traditional Elasticsearch (Self-hosted or Elastic Cloud Standard)
ELASTICSEARCH_URL=http://elasticsearch:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=your-secure-password

## Common Configuration (applies to both options)
ELASTICSEARCH_ENABLED=true
ES_INDEX_PREFIX=eventcal
ES_INDEX_SUFFIX=dev

# Kibana Configuration (for analytics dashboards)
# Note: Not available with Serverless - use Elastic Cloud console instead
KIBANA_PASSWORD=your-kibana-password
KIBANA_ENABLED=true
KIBANA_DOMAIN=kibana.eventcal.app
KIBANA_PUBLIC_URL=http://localhost:5601
KIBANA_ENCRYPTION_KEY=your-32-char-encryption-key-here!

# AI Image Generation (optional - for sample data)
# Set AI_IMAGE_PROVIDER to 'openai' to use OpenAI DALL-E 3 for generating realistic images
# Leave empty or set to 'placeholder' to use colored placeholders instead
AI_IMAGE_PROVIDER=placeholder
AI_IMAGE_API_KEY=

# Application Configuration
PORT=5000
NODE_ENV=production
