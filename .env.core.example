# Core VM environment for docker-compose.core.yml

# Domain configuration (update to your production domains)
DOMAIN=app.local.example
WWW_DOMAIN=www.local.example
API_DOMAIN=api.local.example
AUTH_DOMAIN=auth.local.example

# Database
POSTGRES_DB=ecssr_events
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@db:5432/ecssr_events

# Session
SESSION_SECRET=change-this-core-secret

# Keycloak
KEYCLOAK_URL=http://keycloak:8080
KEYCLOAK_REALM=ecssr-events
KEYCLOAK_CLIENT_ID=ecssr-events-app
KEYCLOAK_CLIENT_SECRET=replace-with-core-secret
KEYCLOAK_REDIRECT_URI=http://api.local.example/api/auth/callback
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=replace-with-strong-password
KEYCLOAK_SYNC_ENABLED=true
KEYCLOAK_SYNC_INTERVAL=3600000

# Superadmin bootstrap
SUPERADMIN_USERNAME=admin
SUPERADMIN_PASSWORD=replace-with-strong-password

# Service endpoints (point to the edge VM)
WHATSAPP_SERVICE_URL=http://edge-vm.example:3001
SCRAPER_SERVICE_URL=http://edge-vm.example:3002

# Frontend build-time config
VITE_API_BASE_URL=http://api.local.example
